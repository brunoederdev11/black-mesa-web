---
import HeaderButton from "./HeaderButton.astro";
import logobms from "../images/19df7cd7b27335f2efe6133c69f7688d.png";

const links = [
    { href: "/", name: "INICIO" },
    { href: "/capitulos", name: "CAPITULOS" },
    { href: "/404", name: "404" },
];
---

<header class="header">
    <input type="checkbox" id="check" class="input_check" />
    <h1 class="title">BLACK MESA</h1>
    <div class="div_flex">
        {links.map((x) => <HeaderButton href={x.href}>{x.name}</HeaderButton>)}
    </div>
    <img src={logobms.src} alt="Black Mesa logo" class="logoBMS" />
    <label for="check" class="contain_bars">
        <img src="../../public/bars.svg" alt="MenÃº icon" />
    </label>
</header>

<style>
    .input_check {
        display: none;
    }

    .contain_bars {
        display: none;
    }

    .logoBMS {
        width: 56px;
    }

    .title {
        font-size: x-large;
        font-weight: bold;
    }

    .header {
        background-color: #c15a1e;
        color: white;
        position: fixed;
        display: flex;
        justify-content: space-between;
        align-items: center;
        top: 0;
        left: 0;
        width: 100%;
        padding: 0px 15px;
        height: 80px;
        cursor: default;
        box-shadow: 0px 10px 80px rgb(255, 102, 0);
        z-index: 10;
    }

    .div_flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-basis: 500px;
        height: 80px;
    }

    @media (max-width: 911px) {
        .logoBMS {
            order: -1;
        }

        .contain_bars {
            display: block;
            cursor: pointer;
        }

        .div_flex {
            flex-direction: column;
            position: absolute;
            justify-content: center;
            right: -100vw;
            top: 80px;
            background-color: #994718;
            height: calc(100vh - 80px);
            width: 100vw;
            transition: all 500ms;
        }

        #check:checked ~ .div_flex {
            left: 0;
        }
    }

    @media (max-width: 390px) {
        .title {
            display: none;
        }
    }
</style>
