---
import HeaderButton from "./HeaderButton.astro";
import logobms from "../images/19df7cd7b27335f2efe6133c69f7688d.png";

const links = [
    { href: "/", name: "INICIO" },
    { href: "/capitulos", name: "CAPITULOS" },
    { href: "/404", name: "404" },
];
---

<header class="header">
    <h1 class="title">BLACK MESA</h1>
    <div class="div_flex">
        {links.map((x) => <HeaderButton href={x.href}>{x.name}</HeaderButton>)}
    </div>
    <img src={logobms.src} alt="Black Mesa logo" class="logoBMS" />
</header>

<style>
    .logoBMS {
        width: 56px;
    }

    .title {
        font-size: x-large;
        font-weight: bold;
    }

    .header {
        background-color: #c15a1e;
        color: white;
        position: fixed;
        display: flex;
        justify-content: space-between;
        align-items: center;
        top: 0;
        left: 0;
        width: 100%;
        padding: 0px 15px;
        max-height: 80px;
        cursor: default;
        box-shadow: 0px 10px 80px rgb(255, 102, 0);
        z-index: 10;
    }

    .div_flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-basis: 500px;
        height: 80px;
    }

    @media (max-width: 911px) {
        .header {
            /* background-color: black; */
        }
    }
</style>
